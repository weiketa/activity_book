%div(style="width:80%;margin-left:10%" )
  .panel.panel-default
    .panel-heading
      用户管理&nbsp&nbsp
      =button_tag '+添加用户'
    .text-center#users
      %table.table
        %tr
          %td 编号
          %td 用户名
          %td 操作
        -@users.each do |user|
          %tr
            %td=user.id
            %td=user.login
            %td
              =link_to '删除'
              =link_to '修改密码'
  .text-right
    =will_paginate @users,:previous_label=> '<<', :next_label=> '>>'







